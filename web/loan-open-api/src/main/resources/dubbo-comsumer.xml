<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">


	<dubbo:application name="${dubbo.appliaction.name}"/>
	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry id="registry" protocol="${dubbo.registry.protocol}" address="${dubbo.registry.address}" client="${dubbo.registry.client}"/>
	<!-- 要引用的服务   这个someService2 取名加个2是为了区别 提供者定义的那个someService.
     这个在消费者使用，就是一个以往的spring bean id
    -->
	<dubbo:reference id="testService"  interface="com.stream.order.service.ITestService" />

</beans>